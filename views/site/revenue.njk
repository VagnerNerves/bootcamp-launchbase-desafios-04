{% extends "site/layout.njk" %}

{% block head %}
    <title>Receitas</title>
{% endblock head %}

{% block content %}

    <section class="cards">
    
        {% for revenue in revenues %}

            <div class="card">
                <div class="card__image">
                    <img src="{{revenue.image}}" alt="{{revenue.title}}">
                </div>
                <div class="card__info">
                    <p class="descricao">{{revenue.title}}</p>
                    <p class="autor">por {{revenue.author}}</p>
                </div>
            </div>
        
        {% endfor %} 

    </section>

{% endblock content %}        

{% block scripts %}

    <script src="script.js"></script>
        
{% endblock scripts %}
        
