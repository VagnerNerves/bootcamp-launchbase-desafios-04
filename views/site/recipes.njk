{% extends "site/layout.njk" %}

{% block head %}
    <title>Receita {{revenue.title}}</title>
{% endblock head %}


{% block content %}

    <section class="containner_Card">
        <div class="card">
            <div class="card__image">
                <img src="{{revenue.image}}" alt="{{revenue.title}}">
            </div>
            <div class="card__info">
                <h1 class="descricao">{{revenue.title}}</h1>
                <p class="autor">por {{revenue.author}}</p>

                <h2>Ingredientes</h2>  
                <div class="esconder">ESCONDER</div>
                <ul class="ingredients">
                    {% for ingredients in revenue.ingredients %}
                        <li>{{ingredients}}</li>
                    {% endfor %}
                </ul>
                
                <h2>Modo de Preparo</h2>
                <ol class="preparation">
                    {% for preparation in revenue.preparation %}
                        <li>{{preparation}}</li>
                    {% endfor %}
                </ol>

                {% if revenue.information %}

                    <h2>Informações Adicionais</h2>
                    <p class="infadicional">{{revenue.information | replace("\n\n", "<br /><br />")}}</p>

                {% endif %}

            </div>
            </div>
        </div>
    </section>

{% endblock %}