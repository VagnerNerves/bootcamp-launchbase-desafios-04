{% extends "admin/layout.njk" %}

{% block content %}

<section class="recipe">
    <div class="top">
        <h1>Receita: {{recipe.title}}</h1>
        <div class="botton">
            <a href="/admin/recipes/{{recipe.id}}/edit">Editar Receita</a>
        </div>
    </div>
    <div class="top__image">
        <img src="{{recipe.image}}" alt="{{recipe.title}}">
    </div>

    <h1 class="recipe__title">{{recipe.title}}</h1>
    <p class="recipe__author">por {{recipe.author}}</p>

    <h2>Ingredientes</h2>  
    <ul>
        {% for ingredients in recipe.ingredients %}
            <li>- {{ingredients}}</li>
        {% endfor %}
    </ul>
    
    <h2>Modo de Preparo</h2>
    <ul>
        {% for preparation in recipe.preparation %}
            <li>- {{preparation}}</li>
        {% endfor %}
    </ul>

    {% if recipe.information %}

        <h2>Informações Adicionais</h2>
        <p class="infadicional">{{recipe.information | replace("\n", "<br />") | replace("\r\n", "<br />")}}</p>

    {% endif %}
    
</section>    


{% endblock content %}